@using Lee_Ralph_HW5.Controllers


<form asp-action="DisplaySearchResults" asp-controller="Home" method= "get">
    <h2>Detailed Search powered by Ralph</h2>
    <div class="form-group">
        <label>Search Repo Name:</label>
        <input name="SearchString" class="form-control" />
    </div>

    <div class="form-group">
        <label>Search Description:</label>
        <input name="SearchDescription" class="form-control" />
    </div>

    <div class="form-group">
        <label>Select a language from the menu:</label>
        @Html.DropDownList("SelectedLanguage", (SelectList)ViewBag.AllLanguages, new {@class = "form-control"})
    </div>

    <div class="form-group">
        <label>Number of stars:</label>
        <input name="StarNumbers" class="form-control" />
        <label class="radio">@Html.RadioButton("StarRange", Range.GreaterThan, true) Greater Than</label>
        <label class="radio">@Html.RadioButton("StarRange", Range.LessThan) Less Than</label>
    </div>

    <div class="form-group">
        <label>Modified after:</label>
        <input type="date" name="dateLastModified" class="form-control" />
    </div>
    
    <button type="submit" class="btn btn-secondary">Search</button>
    

</form>


